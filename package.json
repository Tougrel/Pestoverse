{
    "name": "pestoverse",
    "description": "The official pesto community website for events",
    "version": "0.1.0",
    "private": true,
    "author": {
        "email": "me@tougrel.dev",
        "name": "Lampros \"Tougrel\" Sagris",
        "url": "https://github.com/Tougrel"
    },
    "contributors": [],
    "scripts": {
        "refresh": "nuxt cleanup && yarn run postinstall",
        "build": "nuxt build",
        "pages:build": "cross-env NITRO_PRESET=cloudflare_pages nuxt build",
        "dev": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "pages:preview": "wrangler pages dev dist/ --kv=KV_CACHE",
        "postinstall": "nuxt prepare",
        "pretty": "prettier --write \"./**/*.{ts,vue}\"",
        "updateimages": "node scripts/update_image_sizes.mjs",
        "migrate:generate": "drizzle-kit generate:sqlite",
        "migrate:update": "drizzle-kit up:sqlite",
        "migrate:local": "drizzle-kit push:sqlite --driver better-sqlite --schema server/db/schema.ts --url local.db",
        "drizzle:studio": "drizzle-kit studio",
        "wrangler": "wrangler"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20231121.0",
        "@iconify-json/line-md": "^1.1.33",
        "@iconify-json/mdi": "^1.1.59",
        "@nuxt/content": "^2.9.0",
        "@nuxt/devtools": "^1.0.4",
        "@nuxt/image": "^1.1.0",
        "@nuxt/ui": "^2.11.0",
        "@nuxtjs/google-fonts": "^3.1.0",
        "@types/better-sqlite3": "^7.6.8",
        "@types/canvas-confetti": "^1.6.4",
        "@types/haversine": "^1.1.8",
        "@types/node": "^18.19.2",
        "better-sqlite3": "^9.2.2",
        "buffer-image-size": "^0.6.4",
        "canvas-confetti": "^1.9.2",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.20.6",
        "haversine": "^1.1.1",
        "js-yaml": "^4.1.0",
        "maplibre-gl": "^3.6.2",
        "nuxt": "^3.8.2",
        "nuxt-icon": "^0.6.7",
        "pmtiles": "^2.11.0",
        "prettier": "^3.1.0",
        "prettier-plugin-tailwindcss": "^0.5.9",
        "sync-request": "^6.1.0",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3",
        "wrangler": "^3.21.0"
    },
    "packageManager": "yarn@3.6.1",
    "dependencies": {
        "@auth/core": "^0.18.4",
        "@hebilicious/authjs-nuxt": "^0.3.5",
        "drizzle-orm": "^0.29.1"
    }
}
